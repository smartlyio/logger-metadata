test:
  name: Test
  runs-on: ubuntu-latest
  strategy:
    matrix:
      ruby: [2.4, 2.5, 2.6, 2.7]
  steps:
    - uses: actions/checkout@v2
    - uses: ruby/setup-ruby@v1
      with:
        ruby-version: ${{ matrix.ruby }}
        bundler-cache: true
    - run: bundle exec rspec --format progress
